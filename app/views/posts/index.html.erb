<% if @posts.any? %>
	<div class="container">
		<div class="row">
			<div class="col-md-8 col-md-offset-2">
				<h2>Here's What People Are Saying</h2>
				<hr>
			</div>
		</div>
	</div>
	<% @posts.each do |post|  %>
	<div class="container">
		<div class="row">
			<div class="col-md-8 col-md-offset-2">
				<div class="panel panel-warning">
					<div class="panel-heading">
						<h3 class="panel-title">Created by: <%= post.user.username %></h3>
					</div>
					<div class="panel-body">
						<p>Title: <%= post.title %> <br>Body: <%= post.body %> <br></p>
					</div>
					<% if post.user.id == session[:user_id] %>
					<div class="panel-footer">
						<%= link_to "Edit Post", edit_post_path(post), class: "btn btn-primary" %>
						<%= link_to "Delete Post",  post, method: :delete, class: "btn btn-danger"  %>
					<% end %>
					</div>
				</div>
			</div>
		</div>
	</div>
	<% end %>
	<% else %>
	<div class="text-center">
		<h4>There are no posts!</h4>
		<br>
		<%= link_to "Add A Post", new_post_path, class: "btn btn-primary" %>
	</div>
<% end %>