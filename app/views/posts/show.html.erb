<div class="container">
  <div class="row">
    <div class="col-md-8 col-md-offset-2">
      <div class="panel panel-warning">
        <div class="panel-heading">
          <%= image_tag @post.user.avatar.url(:thumb) %>
          <h3 class="panel-title">Created by: <%= @post.user.username %></h3>
        </div>
        <div class="panel-body">
		      <p>Title: <%= @post.title %> <br>
		    Body: <%= @post.body %> <br></p>
			 </div>
       <% if @post.user.id == session[:user_id] %>
       <div class="panel-footer">
        <%= link_to "Edit Post", edit_post_path(@post), class: "btn btn-primary" %>
        <%= link_to "Delete Post",  @post, method: :delete, class: "btn btn-danger"  %>
      <% end %>
			</div>
      </div>
    </div>
  </div>
</div>


