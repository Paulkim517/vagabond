
	<div id="jumbotron" class="jumbotron" style="background-image: linear-gradient(to bottom, rgba(0, 0, 0, 0.5) 0%, rgba(0, 0, 0, 0.5) 100%), url(<%= asset_path @city.image %>);">

		<div class="container">
			
		</div>
		<!-- <div class="jumbotron-overlay"></div> -->
		<h1 id="city-name"><%= @city.name %></h1>

	</div>

	<div class="container">
		<div class="row">
			<div class="col-md-8 col-md-offset-2">
				<br><br>
				<%= link_to "New Post", new_city_post_path(@city, @post), class: "btn btn-success" %>
				<br><br>

				<% if @city.posts.any? %>

					<% @city.posts.reverse_each do |post| %>
						<div class="panel panel-warning">
							<div class="panel-heading">
								<%= image_tag post.user.avatar.url(:thumb), class: "thumbnail" %>
								<h3 class="panel-title username"> &nbsp<%= post.user.username %></h3>
							</div>
							<div class="panel-body">
								<p>Title: <%= post.title %> <br>Body: <%= post.body %> <br>
<% tag_cloud(@tags, %w(css1 css2 css3 css4)) do |tag, css_class| %>
  <%= link_to tag.name, tag_path(tag), :class => css_class %>
<% end %>

								</p>
							</div>


							<% if post.user.id == session[:user_id] %>
								<div class="panel-footer">
									<%= link_to "Edit Post", edit_post_path(post), class: "btn btn-primary" %>
									<%= link_to "Delete Post",  post, method: :delete, class: "btn btn-danger"  %>
								</div>
							<% end %>
						</div>	
					<% end %>
				<% else %>
					<p>Please add a post<p>
				</div>
			</div>
		</div>
<% end %>
