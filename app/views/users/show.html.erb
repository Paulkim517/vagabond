<div class="jumbotron">
	<h1>Your Posts</h1>
	<div>
		<p>Welcome back <%= current_user.username %></p>
	</div>
</div>

<div class="container">
<% if current_user.posts.any? %>
	<h3>My Posts</h3>
	<% current_user.posts.each do |post|  %>
		<p><%= post.title %> - <%= post.body %> </p>
		<%= link_to "Edit Post", edit_post_path(post) %>
		<%= link_to "Delete Post", post_path(post.id), method: :delete, class: "btn btn-danger"  %>
	<% end %>
<% else %>
	<h4>You don't have any posts!</h4>
	<br>
	<%= link_to "Add A Post", new_post_path, class: "btn btn-success" %>
<% end %>
</div>

