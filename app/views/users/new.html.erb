<div class="text-center">
	<h1>Sign Up</h1>
</div>
<div class="row">
	<div class="col-md-4 col-md-offset-4">
		<hr>
		<%= form_for :user, url: users_path, :html => { :multipart => true, :id => "new_user" } do |f| %>
		<div class="form-group">
			<label for="exampleInputPassword1">Username</label>
			<%= f.text_field :username, placeholder: "Username", autofocus: true, class: "form-control" %>
		</div>
		<div class="form-group">
			<label for="exampleInputPassword1">Email</label>
			<%= f.email_field :email, placeholder: "Email", class: "form-control" %>
		</div>
		<div class="form-group">
			<label for="exampleInputPassword1">Password</label>
			<%= f.password_field :password, placeholder: "Password", class: "form-control" %>
		</div>
		<div class="form-group">
			<label for="exampleInputPassword1">Location</label>
			<%= f.text_field :location, placeholder: "Where You At?", class: "form-control" %>
		</div>
		<div class="form-group">
			<label for="exampleInputPassword1">Avatar</label>
			<%= f.file_field :avatar %>
			<p class="help-block">Avatar is optional</p>
		</div>

		<%= f.submit "Sign Up", class: "btn btn-primary btn-block" %>
		<% end %>

		<br>
		<p>Already have an account? <%= link_to "Click here", login_path%> to log in.</p>
	</div>
</div>